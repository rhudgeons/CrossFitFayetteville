<!DOCTYPE html>
<html>
<head>
  <title>CrossFit Fayetteville</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "CrossFit Fayetteville", root_url, class: "navbar-brand", id: "logo-name" %>
      <div id="navbar" class="collapse navbar-collapse navbar-right">
        <ul class="nav navbar-nav">
          <li><%= link_to "Welcome", root_url %></li>
          <li><%= link_to "Why CrossFit?", root_url %></li>
          <li><%= link_to "Blog", root_url %></li>
          <li><%= link_to "Coaches", root_url %></li>
          <li><%= link_to "Programs and Pricing", root_url %></li>
        </ul>
      </div>
    </header>

    <%= yield %>

    <nav class="navbar navbar-inverse navbar-fixed-bottom">
      <div class="container">
        <%= render 'layouts/social' %>
      </div>
    </nav>

  </body>
</html>
